@{
    Layout = null;
    string returnUrl = ViewData["ReturnUrl"] as string;
}


<html>
<head>
<meta name="viewport" content="width=device-width" />
<title>IniciarSesion</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Roboto:wght@100;500&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<a href="https://icons8.com/icon/17949/google"></a>
<link href="~/css/style1.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
    <header>
        <img src="~/img/logo.jpg" width="50px" height="50px" />
        <h1>EncuestasTJ</h1>
        <br />
    </header>
    <br />

    <div>
        <p>O Continua, accesando a encuestas tj.</p>

        <a asp-controller="Login" asp-action="GoogleLogin" class="google btn btn-warning btn-lg btn-block form-control"><img src="https://rotulosmatesanz.com/wp-content/uploads/2017/09/2000px-Google_G_Logo.svg_.png" width="35px" height="35px" />CONTINUAR CON GOOGLE</a>
        <br />
        <a asp-controller="Login" asp-action="FacebookLogin" class="fb btn btn-primary btn-lg btn-block form-control"><i class="fa fa-facebook-square" style="font-size:24px"></i>CONTINUAR CON FACEBOOK</a>

  @*    <button id="fb"><i class="fa fa-facebook-square" style="font-size:24px"></i>CONTINUE WITH FACEBOOK</button><br>
        <button id="apple"><i class="fa fa-apple" style="font-size:24px"></i>CONTINUE WITH APPLE</button><br>
        <button id="google"> </button><br>
         <button id="no">CONTINUE WITH NUMBER</button><br> *@
        <section class="mid">
            <hr style="width:40%;text-align:left;margin-right:0">
            <h> O </h>
            <hr style="width:40%;text-align:left;margin-left:1rem">
        </section>



        <form asp-controller="Login" asp-action="IniciarSesion" method="post">
            <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
            <div class="d-grid gap-2 mb-3">
                <input type="hidden" name="returnUrl" value="@returnUrl" /> <!-- Almacenar el returnUrl en un campo oculto -->
            </div>
            @if (ViewData["Mensaje"] != null)
            {

                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                </div>
            }
            <section>
                <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
            </section>
        </form>
      
        <hr style="width:100%;text-align:left;margin-left:0">
        <h3>¿No tienes una cuenta? </h3>
        <a class="btn btn-outline-secondary" href="@Url.Action("Registro","Login")"> REGISTRARTE EN ENCUESTAS TJ</a>
    </div>


    </div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

